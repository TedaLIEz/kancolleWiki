<resources>

    <!-- Base application theme. -->

    <style name="MyTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:colorPrimary">@color/colorPrimary</item>
        <item name="android:colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:windowTranslucentNavigation">true</item>
    </style>
    <style name="MainActivityStyle" parent="MyTheme">
        <item name="android:actionMenuTextAppearance">@style/MainActivityStyle.MenuStyle</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>

    </style>
    <style name="ShipActivityStyle" parent="MyTheme">

    </style>


    <style name="NavigationBarStyle" parent="MyTheme">

    </style>

    <style name="MainActivityStyle.MenuStyle">
        <item name="android:textSize">@dimen/abc_text_size_medium_material</item>
    </style>

    <style name="Widget.CardContent" parent="android:Widget">
        <item name="android:elevation">5dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingTop">24dp</item>
        <item name="android:paddingBottom">24dp</item>
        <item name="android:orientation">vertical</item>
    </style>
</resources>
