<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="@android:style/Theme.Material.NoActionBar">

    </style>
    <style name="MyTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:colorPrimary">@color/colorPrimary</item>
        <item name="android:colorPrimaryDark">@color/colorPrimaryDark</item>
    </style>
    <style name="MainActivityStyle" parent="MyTheme">
        <item name="android:actionBarStyle">@style/NavigationBarStyle</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:actionMenuTextAppearance">@style/MainActivityStyle.MenuStyle</item>
    </style>
    <style name="ShipActivityStyle" parent="MyTheme">

    </style>


    <style name="NavigationBarStyle" parent="@android:style/Theme.Material.Light">
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="MainActivityStyle.MenuStyle">
        <item name="android:textSize">@dimen/abc_text_size_medium_material</item>
    </style>

    <style name="Widget.CardContent" parent="android:Widget">
        <item name="android:elevation">5dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingTop">24dp</item>
        <item name="android:paddingBottom">24dp</item>
        <item name="android:orientation">vertical</item>
    </style>
    <style name="MyTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="MyTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>
